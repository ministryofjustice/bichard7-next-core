@startuml
set separator none
title Bichard - Reporting - Components

left to right direction

!include <C4/C4>
!include <C4/C4_Context>
!include <C4/C4_Container>
!include <C4/C4_Component>

Container(Bichard.StaticFileService, "Static File Service", "", $tags="")
ContainerDb(Bichard.BichardDatabase, "Bichard Database", "PostgreSQL", "", $tags="")
Container(Bichard.EmailSystem, "Email System", "Postfix", "", $tags="")
Container(Bichard.AuditLog, "Audit Log", "", $tags="")

Container_Boundary("Bichard.Reporting_boundary", "Reporting", $tags="") {
  Component(Bichard.Reporting.AutomationReport, "Automation Report", "", $tags="")
  Component(Bichard.Reporting.CommonPlatformReport, "Common Platform Report", "", $tags="")
  Component(Bichard.Reporting.MPSReport, "MPS Report", "", $tags="")
  Component(Bichard.Reporting.TopExceptionsReport, "Top Exceptions Report", "", $tags="")
}

Rel_D(Bichard.AuditLog, Bichard.BichardDatabase, "", $tags="")
Rel_D(Bichard.Reporting.AutomationReport, Bichard.AuditLog, "", $tags="")
Rel_D(Bichard.Reporting.CommonPlatformReport, Bichard.AuditLog, "", $tags="")
Rel_D(Bichard.Reporting.AutomationReport, Bichard.StaticFileService, "", $tags="")
Rel_D(Bichard.Reporting.TopExceptionsReport, Bichard.StaticFileService, "", $tags="")
Rel_D(Bichard.Reporting.CommonPlatformReport, Bichard.EmailSystem, "", $tags="")
Rel_D(Bichard.Reporting.MPSReport, Bichard.BichardDatabase, "", $tags="")
Rel_D(Bichard.Reporting.TopExceptionsReport, Bichard.AuditLog, "", $tags="")

SHOW_LEGEND(true)
@enduml