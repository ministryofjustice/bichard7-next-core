@startuml
set separator none
title Bichard - Audit Log - Components

left to right direction

!include <C4/C4>
!include <C4/C4_Context>
!include <C4/C4_Container>
!include <C4/C4_Component>

Container(Bichard.ActiveMQ, "Active MQ", "Active MQ", "", $tags="")
ContainerDb(Bichard.BichardDatabase, "Bichard Database", "PostgreSQL", "", $tags="")

Container_Boundary("Bichard.AuditLog_boundary", "Audit Log", $tags="") {
  Component(Bichard.AuditLog.AuditLogAPIGateway, "Audit Log API Gateway", "", $tags="")
  Component(Bichard.AuditLog.AuditLogAPILambda, "Audit Log API Lambda", "", $tags="")
  Component(Bichard.AuditLog.DynamoDB, "DynamoDB", "DynamoDB", "", $tags="")
}

Rel_D(Bichard.AuditLog.AuditLogAPILambda, Bichard.AuditLog.DynamoDB, "", $tags="")
Rel_D(Bichard.AuditLog.AuditLogAPILambda, Bichard.BichardDatabase, "", $tags="")
Rel_D(Bichard.AuditLog.AuditLogAPILambda, Bichard.ActiveMQ, "", $tags="")
Rel_D(Bichard.AuditLog.AuditLogAPIGateway, Bichard.AuditLog.AuditLogAPILambda, "", $tags="")

SHOW_LEGEND(true)
@enduml