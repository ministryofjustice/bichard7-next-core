{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "composite": true,
    "declaration": true,
    "baseUrl": "./"
  },
  "include": ["src"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
