{
  "name": "@moj-bichard7/api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "esbuild": "tsx build.ts",
    "clean": "rm -rf ./dist",
    "watch": "tsc --project tsconfig.build.json --watch",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest --forceExit --maxWorkers=80% --detectOpenHandles --testRegex '\\.(?:unit|integration)\\.test.ts$' --testPathPattern",
    "start": "node dist/src/index.js",
    "start:dev": "nodemon --config nodemon.json src/index.ts",
    "test:unit": "jest --verbose --maxWorkers=80% --testRegex '\\.(?:unit)\\.test.ts$'",
    "test:integration": "jest --verbose --maxWorkers=80% --detectOpenHandles --testRegex '\\.(?:integration)\\.test.ts$'",
    "test:e2e": "jest --verbose --runInBand --workerThreads=true --detectOpenHandles --testRegex '\\.(?:e2e)\\.test.ts$'",
    "test:watch": "jest ---maxWorkers=80% --detectOpenHandles --watch --testRegex '\\.(?:unit|integration)\\.test.ts$'",
    "test:e2e:watch": "jest --verbose --runInBand --workerThreads=true --detectOpenHandles --testRegex '\\.(?:e2e)\\.test.ts$' --watch",
    "update-deps": "ncu -u && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "exports": {
    "./*": "./dist/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.7",
    "esbuild": "~0.23.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "tiny-glob": "^0.2.9",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "zod-fixture": "^2.5.2"
  },
  "dependencies": {
    "@fastify/autoload": "6.0.2",
    "@fastify/swagger": "^9.2.0",
    "@fastify/swagger-ui": "^5.1.0",
    "crypto": "^1.0.1",
    "fastify": "^5.0.0",
    "fastify-zod-openapi": "^2.0.0",
    "http-status": "^1.8.1",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.4",
    "qs": "^6.13.0",
    "zod": "^3.23.8",
    "zod-openapi": "^3.1.1"
  }
}
