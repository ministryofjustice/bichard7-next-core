{
  "name": "@moj-bichard7/conductor",
  "version": "2.0.0",
  "devDependencies": {
    "@stomp/stompjs": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "mailhog": "^4.16.0",
    "postgres": "^3.4.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "wait-for-expect": "^3.0.2",
    "ws": "^8.16.0"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./dist",
    "watch": "tsc --project tsconfig.build.json --watch",
    "build-worker": "docker build -f conductor/Dockerfile -t core-worker:latest .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "update-deps": "ncu -u && npm install",
    "test": "jest --detectOpenHandles",
    "setup": "GIT_COMMIT_HASH=$(git rev-parse --short HEAD) npx ts-node -T ./deploy/deploy.ts",
    "worker": ". ../../environment/local-conductor-worker.env && npm run worker-noenv",
    "worker-noenv": "npx ts-node -T src/worker.ts"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ministryofjustice/bichard7-next-core.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ministryofjustice/bichard7-next-core/issues"
  },
  "exports": {
    "./*": "./dist/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "homepage": "https://github.com/ministryofjustice/bichard7-next-core#readme",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.521.0",
    "@aws-sdk/client-s3": "^3.521.0",
    "@aws-sdk/lib-dynamodb": "^3.521.0",
    "@io-orkes/conductor-javascript": "^2.0.0",
    "axios": "^1.6.7",
    "lodash.ismatch": "^4.4.0",
    "zod": "^3.22.4"
  }
}
