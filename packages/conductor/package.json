{
  "name": "@moj-bichard7/conductor",
  "version": "2.0.0",
  "devDependencies": {
    "@aws-sdk/client-sqs": "^3.922.0",
    "@moj-bichard7-developers/bichard7-next-data": "^2.0.309",
    "@stomp/stompjs": "^7.2.1",
    "esbuild": "~0.25.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "mailhog": "^4.16.0",
    "postgres": "^3.4.4g s",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "wait-for-expect": "^4.0.0",
    "ws": "^8.18.3"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./dist",
    "watch": "tsc --project tsconfig.build.json --watch",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "update-deps": "ncu -u && npm install",
    "test": "jest --detectOpenHandles --workerThreads=true",
    "setup": "GIT_COMMIT_HASH=$(git rev-parse --short HEAD) npx ts-node -T ./deploy/deploy.ts",
    "worker": ". ../../environment/local-conductor-worker.env && npm run worker-noenv",
    "worker-noenv": "npx ts-node -T src/worker.ts",
    "esbuild": "node build.js"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ministryofjustice/bichard7-next-core.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ministryofjustice/bichard7-next-core/issues"
  },
  "exports": {
    "./*": "./dist/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "homepage": "https://github.com/ministryofjustice/bichard7-next-core#readme",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.922.0",
    "@aws-sdk/client-s3": "^3.922.0",
    "@aws-sdk/lib-dynamodb": "^3.922.0",
    "@io-orkes/conductor-javascript": "~2.1.5",
