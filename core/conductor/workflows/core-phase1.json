{
  "accessPolicy": {},
  "name": "core_phase1",
  "description": "Runs phase 1 processing for Bichard in Core",
  "version": 1,
  "tasks": [
    {
      "name": "extract_paths",
      "taskReferenceName": "extract_paths",
      "inputParameters": {
        "records": "${workflow.input.records}",
        "queryExpression": ".records[0].s3.object.key"
      },
      "type": "JSON_JQ_TRANSFORM",
      "startDelay": 0,
      "optional": false,
      "asyncComplete": false
    },
    {
      "name": "process_phase1",
      "taskReferenceName": "process_phase1",
      "inputParameters": {
        "s3Path": "${extract_paths.output.result}"
      },
      "type": "SIMPLE",
      "startDelay": 0,
      "optional": false,
      "asyncComplete": false
    },
    {
      "name": "check_phase1_result",
      "taskReferenceName": "check_phase1_result",
      "inputParameters": {
        "switchCaseValue": "${process_phase1.output.result.resultType}"
      },
      "type": "SWITCH",
      "evaluatorType": "value-param",
      "expression": "switchCaseValue",
      "decisionCases": {
        "success": [
          {
            "name": "send_to_phase2",
            "taskReferenceName": "send_to_phase2",
            "inputParameters": {
              "phase1Result": "${process_phase1.output.result}"
            },
            "type": "SIMPLE",
            "startDelay": 0,
            "optional": false,
            "asyncComplete": false
          }
        ],
        "failure": [
          {
            "name": "store_in_quarantine_bucket",
            "taskReferenceName": "store_in_quarantine_bucket",
            "inputParameters": {
              "s3Path": "${extract_paths.output.result}"
            },
            "type": "SIMPLE",
            "startDelay": 0,
            "optional": false,
            "asyncComplete": false
          }
        ]
      }
    },
    {
      "name": "merge_audit_log_events",
      "taskReferenceName": "merge_audit_log_events",
      "type": "JSON_JQ_TRANSFORM",
      "inputParameters": {
        "quarantineEvents": "${store_in_quarantine_bucket.output.auditLogEvents}",
        "sendToPhase2Events": "${send_to_phase2.output.auditLogEvents}",
        "phase1Events": "${process_phase1.output.result.auditLogEvents}",
        "queryExpression": "{ auditLogEvents: .quarantineEvents + .sendToPhase2Events + .phase1Events}"
      }
    },
    {
      "name": "store_audit_log_events",
      "taskReferenceName": "store_audit_log_events",
      "inputParameters": {
        "correlationId": "${process_phase1.output.result.correlationId}",
        "auditLogEvents": "${merge_audit_log_events.output.result.auditLogEvents}"
      },
      "type": "SIMPLE",
      "startDelay": 0,
      "optional": false,
      "asyncComplete": false
    }
  ],
  "inputParameters": ["s3Path"],
  "outputParameters": {},
  "schemaVersion": 2,
  "restartable": true,
  "workflowStatusListenerEnabled": false,
  "timeoutPolicy": "ALERT_ONLY",
  "timeoutSeconds": 0,
  "variables": {},
  "inputTemplate": {}
}
